[diff]
	tool = ediff
	guitool = ediff
[merge]
	tool = ediff
[diff "lisp"]
	xfuncname = "^(\\(.*)$"
[diff "org"]
	xfuncname = "^(\\*+ +.*)$"
[difftool "ediff"]
    cmd = ~/.local/bin/ediff.sh $LOCAL $REMOTE $MERGED
[merge]
    tool = ediff
[mergetool "ediff"]
    cmd = ~/.local/bin/ediff.sh $LOCAL $REMOTE $MERGED $BASE

[init]
	defaultBranch = main
[gitlab "gitlab.ody5.de/api/v4"]
	user = ody55eus
[pull]
	rebase = false
	ff = only
[core]
	excludesfile = ~/.config/git/ignore
	attributesfile = ~/.config/git/attributes
	pager = nvim -R
	sshCommand = ssh
[diff]
	tool = ediff
	guitool = ediff
[merge]
	tool = ediff
[diff "lisp"]
	xfuncname = "^(\\(.*)$"
[diff "org"]
	xfuncname = "^(\\*+ +.*)$"
[diff "scheme"]
	xfuncname = "^(\\(define.*)$"
[diff "texinfo"]
	xfuncname = "^@node[[:space:]]+([^,]+).*$"
[difftool "ediff"]
    cmd = ~/.local/bin/ediff.sh $LOCAL $REMOTE $MERGED
[merge]
    tool = ediff
[mergetool "ediff"]
    cmd = ~/.local/bin/ediff.sh $LOCAL $REMOTE $MERGED $BASE
    trueExitCode = true
[color]
	pager = no
[safe]
